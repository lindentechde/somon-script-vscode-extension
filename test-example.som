// Мисоли SomonScript
// Example showing all major features

// Тағйирёбандаҳо / Variables
тағйирёбанда салом = "Салом, ҷаҳон!";
собит ПИ = 3.14159;

// Функсия / Function
функсия ҳисоб(а: рақам, б: рақам): рақам {
    бозгашт а + б;
}

// Синф / Class
синф Корбар {
    хосусӣ ном: сатр;
    хосусӣ синну_сол: рақам;

    конструктор(ном: сатр, синну_сол: рақам) {
        ин.ном = ном;
        ин.синну_сол = синну_сол;
    }

    салом() {
        чоп.сабт("Салом, ман " + ин.ном);
    }
}

// Истифодаи синф / Using the class
тағйирёбанда корбар = нав Корбар("Аҳмад", 25);
корбар.салом();

// Изҳороти шартӣ / Conditional
агар (корбар.синну_сол > 18) {
    чоп.сабт("Калонсол");
} вагарна {
    чоп.сабт("Хурдсол");
}

// Давраи барои / For loop
барои (тағйирёбанда i = 0; i < 5; i++) {
    чоп.сабт("Рақам: " + i);
}

// Функсияи асинхронӣ / Async function
ҳамзамон функсия гирифтани_маълумот() {
    тағйирёбанда маълумот = интизор fetch("https://api.example.com");
    бозгашт маълумот;
}

// Гирифтани хато / Error handling
кӯшиш {
    тағйирёбанда натиҷа = ҳисоб(10, 20);
    чоп.сабт("Натиҷа: " + натиҷа);
} гирифтан (хато) {
    чоп.хато("Хато рух дод:", хато);
} ниҳоят {
    чоп.сабт("Анҷом ёфт");
}

// Интерфейс / Interface
интерфейс Намуна {
    ном: сатр;
    қимат: рақам;
    метод(): void;
}

// Массив / Array
тағйирёбанда рӯйхат = [1, 2, 3, 4, 5];
рӯйхат.илова(6);

// Харита / Map
тағйирёбанда дукарата = рӯйхат.харита((х) => х * 2);

чоп.сабт("Баъди дукарата:", дукарата);
